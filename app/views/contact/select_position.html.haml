#heading
  %h2 Contact Congress
  
.contact_congress

  = render 'contact_congress_status_bar', :step => 1
  
  %p.behave.center 
    You are contacting your representatives in Congress regarding:
    %strong= "#{@bill.typenumber} #{@bill.title_common}"
  %br
  %br
  %p.margin-top 
    %h3.center What is your position on this bill?
  
  .position_buttons.padding
    %a.button.blue.huge.margin-right{ :href => url_for(:action => 'bill', :position => 'support') }
      %span= "I Support #{@bill.typenumber}"
    %a.button.yellow.huge.margin-right{ :href => url_for(:action => 'bill', :position => 'oppose') }
      %span= "I Oppose #{@bill.typenumber}"
    %a.button.silver.huge.margin-right{ :href => url_for(:action => 'bill', :position => 'tracking') }
      %span= "I Am Tracking #{@bill.typenumber}"
  
  
  
  - if @sens.empty? and @reps.empty?
    .contact_recipients.none
  -else
    .contact_recipients
      You are sending this message to:
      %ul.people
        - @sens.each do |s|
          %li
            = image_tag "photos/thumbs_50/#{s.id}-50px.jpeg", :class =>"photo", :alt => 'photo'
            = link_to s.name, person_path(s)
            %span
              = "Vote on Passage of #{@bill.typenumber}: " 
              %strong= "#{@bill.vote_on_passage(s)}"
        - if @reps.size > 1
          %li
            We can't determine your Representative. Please configure zip+4 and address on your
            = link_to 'profile page', user_profile_path(:login => current_user.login)
        - else
          %li
            = image_tag "photos/thumbs_50/#{@reps.first.id}-50px.jpeg", :class =>"photo", :alt => 'photo'
            = link_to @reps.first.name, person_path(@reps.first)
            %span
              = "Vote on Passage of #{@bill.typenumber}: " 
              %strong= "#{@bill.vote_on_passage(@reps.first)}"
  %br
  %br
 