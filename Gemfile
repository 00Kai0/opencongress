source 'http://rubygems.org'

gem 'rails', '2.3.11'

# database gems -- need both pg and mysql for app and wiki
gem 'pg'
gem 'mysql'

# HAML support
gem "haml"

# RMagick
gem 'rmagick', '2.13.1'

# GovKit
gem "govkit"

# jammit support
gem "jammit"

# notifier for production errors
gem "hoptoad_notifier"

# OpenID 
gem 'ruby-openid'
gem 'rack-openid'

# markup tools and parsers
gem 'simple-rss'
gem 'mediacloth'
gem 'hpricot'
gem 'RedCloth'
gem 'bluecloth'
gem 'htmlentities'
gem "json"

# Deployment
gem 'capistrano'
gem 'capistrano-ext'

# oauth
gem 'oauth'
